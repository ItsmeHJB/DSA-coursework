<?php
  header("Content-Type: application/rss+xml; charset=ISO-8859-1");

  DEFINE ('DB_HOST', 'localhost');
  DEFINE ('DB_NAME', 'db_twincities.sql');

  $rssfeed = '<?xml version="1.0" encoding="ISO-8859-1"?>';
  $rssfeed .= '<rss version="2.0">';
  $rssfeed .= '<language>en-us</language>';

  try{
    $db = new PDO('mysql:host=51.75.162.4;port=3306;dbname=db_twincities', "username", "password");
    $dbq = $db->query("SELECT * FROM `tb_cities` WHERE `name` = 'Rotterdam'");
    $row = $dbq->fetch(PDO::FETCH_ASSOC);

    $name = $row['name'];
    $province = $row['province'];
    $website = $row['website'];

    $db = null;
    $dbq = null;
  }
  catch (PDOException $e){
    echo "Error!: " . $e->getMessage() . "<br/>";
    die();
  }

  $rssfeed .= '<channel>';
  $rssfeed .= '<item>';
  $rssfeed .= '<name>' . $name . '</name>';
  $rssfeed .= '<province>' . $province . '</province>';
  $rssfeed .= '<website>' . $website . '</website>';
  $rssfeed .= '</item>';

  $rssfeed .= '</channel>';
  $rssfeed .= '</rss>';

  echo $rssfeed;
?>

